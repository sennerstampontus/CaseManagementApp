<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style x:Key="TemplateInputLabels" BasedOn="{StaticResource {x:Type Label}}" TargetType="{x:Type Label}">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Label">
                        <Label Foreground="#9EC5AB" Content="{TemplateBinding Property=Content}" FontFamily="Calibri" FontWeight="Bold" FontSize="14" HorizontalAlignment="Left"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>

    </Style>
    

</ResourceDictionary>